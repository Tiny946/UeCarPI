<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alberto.uecarpi.MainActivity$PlaceholderFragment">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora de ir"
        android:id="@+id/buttonHoradeIr"
        android:layout_below="@+id/spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:background="@drawable/btn_redondoroj"
        android:textColor="@color/abc_primary_text_material_dark"
        android:paddingLeft="32dp"
        android:paddingRight="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora de volver"
        android:id="@+id/buttonHoraVolver"
        android:layout_alignTop="@+id/buttonHoradeIr"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/btn_redondoroj"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextLugarQuedada"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:hint="Lugar de quedada"
        android:layout_below="@+id/buttonHoradeIr"
        android:singleLine="false"
        android:theme="@style/MyEditTextTheme"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextMOdelo"
        android:layout_below="@+id/editTextLugarQuedada"
        android:layout_centerHorizontal="true"
        android:hint="Modelo coche"
        android:theme="@style/MyEditTextTheme"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPlazasDisp"
        android:layout_below="@+id/editTextMOdelo"
        android:layout_centerHorizontal="true"
        android:hint="Plazas disponibles"
        android:theme="@style/MyEditTextTheme"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publicar"
        android:id="@+id/buttonOK"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_redondoroj"
        android:layout_centerHorizontal="true"
        android:textColor="@color/abc_primary_text_material_dark"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPrecioMes"
        android:hint="Precio por mes"
        android:layout_below="@+id/editTextPlazasDisp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:theme="@style/MyEditTextTheme"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewHoraVolver"
        android:textSize="20dp"
        android:textIsSelectable="true"
        android:layout_above="@+id/buttonHoraVolver"
        android:layout_alignRight="@+id/buttonHoraVolver"
        android:layout_alignEnd="@+id/buttonHoraVolver"
        android:text="                              "
        android:textAlignment="center"
        android:layout_marginRight="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewHoraIr"
        android:textSize="20dp"
        android:textIsSelectable="true"
        android:layout_above="@+id/buttonHoraVolver"
        android:layout_alignRight="@+id/buttonHoradeIr"
        android:layout_alignEnd="@+id/buttonHoradeIr"
        android:text="                              "
        android:singleLine="true"
        android:layout_marginRight="40dp" />


</RelativeLayout>
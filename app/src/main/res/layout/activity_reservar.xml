<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.alberto.uecarpi.Reservar">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/fondoperfreservar"
        android:layout_alignBottom="@+id/lbl_destino"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:paddingTop="0dp"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_destino"
        android:text="Destino: "
        android:textSize="25dp"
        android:layout_marginTop="209dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_modelo"
        android:text="Modelo: "
        android:textSize="25dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_precio"
        android:textSize="25dp"
        android:text="Precio: "
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_plazas"
        android:text="Plazas:"
        android:textSize="25dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESERVAR"
        android:id="@+id/btnreservar"
        android:onClick="hacerReserva"
        android:background="@drawable/btn_redondoroj"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/lbl_precio"
        android:layout_alignStart="@+id/lbl_precio"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---------------------------------------------------------------------------"
        android:id="@+id/textView6"
        android:layout_below="@+id/lbl_destino"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---------------------------------------------------------------------------"
        android:id="@+id/textView3"
        android:layout_below="@+id/lbl_modelo"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---------------------------------------------------------------------------"
        android:id="@+id/textView2"
        android:layout_below="@+id/lbl_plazas"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---------------------------------------------------------------------------"
        android:id="@+id/textView5"
        android:layout_below="@+id/lbl_precio"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewHoraIr"
        android:textSize="25dp"
        android:text="Hora ir:"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/btnreservar"
        android:layout_alignEnd="@+id/btnreservar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---------------------------------------------------------------------------"
        android:id="@+id/textView8"
        android:layout_below="@+id/textViewHoraIr"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewHoraVolver"
        android:textSize="25dp"
        android:text="Hora volver:"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---------------------------------------------------------------------------"
        android:id="@+id/textView7"
        android:layout_below="@+id/textViewHoraVolver"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar2"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:stepSize="0.5"
        android:progressBackgroundTint="@color/colorPrimaryDark"/>

</RelativeLayout>
